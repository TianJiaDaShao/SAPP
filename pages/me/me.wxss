.me .userinfo{
  position: relative;
  width: 750rpx;
  height: 450rpx;
  background: #35495e;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 70rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 28rpx;
}
.userinfo-icon{
  margin-top: 20rpx;
  text-align: center;
}
.userinfo-icon .icon{
  width: 42rpx;
  height: 42rpx;
  margin:0 30rpx;
}
.userinfo-set{
  position: absolute;
  top: 5rpx;
  right: 26rpx;
}
.userinfo-set .icon{
  width: 50rpx;
  height: 50rpx;
}
